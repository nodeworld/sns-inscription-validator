{
    "compilerOptions": {
      "target": "ES6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "declaration": true
    },
    "ts-node": {
        "esm": true
    },
    "lib": ["esnext"]
  }
  